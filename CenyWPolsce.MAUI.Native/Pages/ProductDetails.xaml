<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vms="clr-namespace:CenyWPolsce.MAUI.Native.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="CenyWPolsce.MAUI.Native.Pages.ProductDetails"
             Title="Szczegóły produktu">
    <ContentPage.BindingContext>
        <vms:ProductDetailsViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label
                Text="Wybrany produkt:"
                FontAttributes="Bold" />
        
        <Label
            Text="{Binding ProductName}"
            VerticalOptions="Center"
            FontSize="24"
            HorizontalOptions="Center" />

        <Label
                Text="Przebieg zmian cen:"
                FontAttributes="Bold" />

        <Grid HeightRequest="200">
            <lvc:CartesianChart Series="{Binding Series}" Title="{Binding ChartTitle}" />
        </Grid>

        <Label
                Text="Ceny w poszczególnych okresach:"
                FontAttributes="Bold" />
    </VerticalStackLayout>
</ContentPage>