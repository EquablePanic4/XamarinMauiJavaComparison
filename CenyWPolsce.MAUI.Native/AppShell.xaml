<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CenyWPolsce.MAUI.Native.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CenyWPolsce.MAUI.Native.Pages"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:DashboardPage}"
            Icon="dashboard.svg" IsEnabled="False" />

        <ShellContent
            Title="Produkty"
            ContentTemplate="{DataTemplate local:ProductsPage}"
            Icon="shopping_cart.svg" />
    </TabBar>
</Shell>
